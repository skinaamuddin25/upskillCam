<% title = "My Orders"; %>

<div class="card">
  <h1>My Orders</h1>

  <% if (!orders || orders.length === 0) { %>
    <p>No orders yet.</p>
  <% } else { %>
    <ul class="orders-list">
      <% orders.forEach(o => { %>
        <li>
          <div class="order-info">
            <strong>Order #<%= o.id %></strong>
            <span class="label">Total: Rs.<%= o.total_amount %></span>
            <span class="label">Date: <%= o.created_at %></span>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <p style="margin-top:10px;">
    <a href="/restaurants">Back to restaurants</a>
  </p>
</div>